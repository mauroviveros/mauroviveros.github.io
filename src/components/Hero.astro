---
import { getI18n } from "@i18n";
import { LINKS } from "@consts";
import Background from "./Background.astro";
import SocialLinks from "./SocialLinks.astro";


const { currentLocale } = Astro;
const t = getI18n(currentLocale)

const CV_HREF = currentLocale?.toUpperCase() === 'ES' ? LINKS.CV.HREF.ES : LINKS.CV.HREF.EN;
---

<Background/>

<section class="relative h-screen w-full flex items-center justify-center">
    <div id="planetcont" class="animate absolute inset-0 top-1/4 overflow-hidden animate-slide-in-bottom">
      <div id="crescent" class="absolute top-0 left-1/2 -translate-x-1/2 w-[250vw] min-h-[100vh] aspect-square rounded-full p-[1px] bg-gradient-to-b from-black/25 dark:from-white/75 from-0% to-transparedivto-5%">
        <div id="planet" class="w-full h-full bg-white dark:bg-black rounded-full p-[1px] overflow-hidden flex justify-center">
          <div id="blur" class="w-full h-20 rounded-full bg-neutral-900/25 dark:bg-white/25 blur-3xl"/>
        </div>
      </div>
    </div>
    <article class="animate absolute h-full w-full flex items-center justify-center">
      <hgroup class="p-5 text-center z-10">
          <h2 class="animated text-lg md:text-xl lg:text-2xl font-semibold opacity-75">{t('hero.gretting')}</h2>
          <h1 class="animated text-2xl md:text-3xl lg:text-4xl font-bold uppercase text-black dark:text-white">DEV WEB | DEV OPS</h1>
          <p class="animated text-sm md:text-base lg:text-lg opacity-75">{t('hero.motto')}</p>
          <article class="animated flex flex-wrap gap-4 justify-center my-5">
              <a href={LINKS.PORTFOLIO.HREF} class="py-2 px-4 flex items-center rounded truncate text-xs md:text-sm lg:text-base bg-black dark:bg-white text-white dark:text-black hover:opacity-75">{t(LINKS.PORTFOLIO.TEXT)}</a>
              <a href={CV_HREF} target="_blank" class="py-2 px-4 flex items-center truncate rounded text-xs md:text-sm lg:text-base border border-black/25 dark:border-white/25 hover:bg-black/5 hover:dark:bg-white/15">{t(LINKS.CV.TEXT)}</a>
          </article>
          <SocialLinks/>
      </hgroup>
    </article>
</section>