---
import { Avatar, Card } from '@components';
import { EXPERIENCE } from '@constants';
---

<Card class="col-start-auto md:col-start-3 md:row-span-5 lg:col-span-2 lg:row-span-2">
  <h3 class="font-semibold">Experience</h3>

  <ul class="flex flex-col gap-3">
    {
      EXPERIENCE.map(({ company, role, period, initials }) => (
        <li class="flex items-center gap-3">
          <Avatar initials={initials} class="size-10 text-xs" />
          <div class="flex-1">
            <h4 class="text-sm font-semibold">{role}</h4>
            <p class="text-muted text-xs">
              {company}. â€¢ {period}
            </p>
          </div>
        </li>
      ))
    }
  </ul>
</Card>
